{
    "extends": ["tslint:recommended", "tslint-config-prettier"],
    "rules": {
      "max-line-length": {
        "options": [
          120
        ]
      },
      "new-parens": true,
      "no-arg": true,
      "no-bitwise": true,
      "no-conditional-assignment": true,
      "no-consecutive-blank-lines": false,
      "no-trailing-whitespace": false,
      "one-line": [
        true,
        "check-open-brace",
        "check-catch",
        "check-else",
        "check-whitespace"
      ],
      "quotemark": [
        true,
        "single"
      ],
      "no-console": false,
      "no-empty": false
    },
    "jsRules": {
      "max-line-length": {
        "options": [
          120
        ]
      }
    }
  }